[Unit]
Description = User Service
[Service]
User=roboshop
Environment=MONGO=true
// highlight-start
Environment=REDIS_URL='redis://redis.dcloudlab.site:6379'
Environment=MONGO_URL="mongodb://mongodb.dcloudlab.site:27017/users"
